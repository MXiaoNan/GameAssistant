<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7F8FA"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_game_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:padding="7dp"
        android:src="@mipmap/ic_about_app" />

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="游戏任务" />

        <RatingBar
            android:id="@+id/rb_game_star"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:numStars="5"
            android:progressDrawable="@drawable/layout_ratingbar"
            android:rating="3.5" />

        <TextView
            android:id="@+id/tv_game_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="官方任务，奖励丰厚" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_game_money"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:clickable="true"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/sel_moneylist_btn"
        android:text="奖励888元"
        android:textColor="@color/sel_btn_moneylist" />
</LinearLayout>